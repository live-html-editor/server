{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"lib": [
			"es2018",
			"dom"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"sourceMap": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"node",
			"yargs",
			"cors",
			"jsdom"
		]
		//"resolveJsonModule": true
		//"esModuleInterop": true // `esModuleInterup` Conflicts with `yargs` (only when using `--help` (!))
	},
	"exclude": [
		"node_modules"
	],
	"files": [
		"src/main.ts"
	]
}
